.panel.panel-default
  .panel-heading 
    h2 Provincias > Listado de provincias
    .panel-body

      form.navbar-form.navbar-left(role="search", method='post',action='/state')
        .form-group
          input.form-control(type="text", placeholder="Nombre", name='name',id='name')
          button.btn.btn-default(type="submit", name="submit") Buscar

        button.btn.btn-default(type="button", aria-label="Left Align")
          a(href="/stateNew/")
            i.fa.fa-pencil.fa-fw.fa-lg
            | Nueva Provincia

    table.table
      thead
        tr
          th Nombre
          th Acciones
      tbody
        each val in states
          tr
            td= val.name
              td
                a(href="/stateEdit/#{val.id}")
                  i.fa.fa-edit.fa-fw.fa-lg